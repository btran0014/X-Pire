<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newItemTitletextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Item Entry:"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/itemNametextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name:"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemNameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Enter Item Name"
            android:inputType="text" />


        <TextView
            android:id="@+id/itemLogDatetextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Acquired:"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemLogDateInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Enter the Date You Bought the Item"
            android:inputType="text" />

        <TextView
            android:id="@+id/itemQuantitytextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Quantity:"
            android:textAlignment="center"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemQuantityInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Enter the Amount Bought"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Confirm" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>