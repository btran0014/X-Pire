<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblue"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/newItemTitletextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/darkgreen"
            android:fontFamily="sans-serif"
            android:text="New Item:"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="30dp" />

        <TextView
            android:id="@+id/itemNametextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/lightgreen"
            android:text="Item Name:"
            android:textAlignment="inherit"

            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemNameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@color/white"

            android:drawablePadding="20dp"
            android:ems="10"
            android:hint="Enter Item Name"
            android:inputType="text"
            android:textColor="@color/black" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"></Space>



        <TextView
            android:id="@+id/itemLogDatetextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/lightgreen"
            android:text="Date Acquired:"
            android:textAlignment="inherit"

            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemLogDateInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:background="@color/white"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Enter the Date You Bought the Item"
            android:inputType="text"
            android:textColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"></Space>


        <TextView
            android:id="@+id/itemQuantitytextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/lightgreen"
            android:text="Item Quantity:"
            android:textAlignment="inherit"

            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itemQuantityInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:background="@color/white"

            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Enter the Amount Bought"
            android:inputType="text"
            android:textColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:backgroundTint="@color/darkgreen"

                android:text="Cancel"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:backgroundTint="@color/darkgreen"

                android:text="Confirm"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>